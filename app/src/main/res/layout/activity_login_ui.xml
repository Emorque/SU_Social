<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    tools:context = ".MainActivity">

    <TextView
        android:id="@+id/SUSocialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SUSocialText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/SUEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LoginText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="19dp"
        android:background="@color/darkGrey"
        android:backgroundTint="@color/grey"
        android:drawableLeft="@drawable/mail_outline"
        android:drawablePadding="15dp"
        android:ems="10"
        android:focusable="true"
        android:hint="Enter SU Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/orange" />

    <EditText
        android:id="@+id/PasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/SUEmailLogin"
        android:layout_alignEnd="@+id/SUEmailLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:focusable="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="15dp"
        android:textColorHint="@color/orange"
        android:background="@color/darkGrey"
        android:backgroundTint="@color/grey"
        android:drawableLeft="@drawable/outline_lock_24"
        android:drawablePadding="15dp"/>

    <Button
        android:id="@+id/GetPasswordButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="100dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="forgot password?"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/PasswordLogin"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:text="Log In"
        android:textSize="15sp" />

    <Button
        android:id="@+id/createAccButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GetPasswordButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="157dp"
        android:background="@android:color/transparent"
        android:padding="15sp"
        android:text="Don't have an account?"
        android:textColor="@color/black"
        android:textSize="11sp" />

</RelativeLayout>