<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp"
    android:scrollbarSize="10dp"
    tools:context=".event_creation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/eventCreationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Create An Event"
        android:textColor="@color/orange"
        android:textSize="30dp"
        android:textStyle="bold" />

        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/eventCreationTitle"

            android:src="@drawable/baseline_image_24"/>

        <Button
            android:id="@+id/addProfileImageButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp"
            android:background="@android:color/transparent"
            android:layout_below="@+id/profilePhoto"
            android:text="Add Image"
            android:textColor="@color/black"
            android:textSize="10sp"/>

    <EditText
        android:id="@+id/eventCreationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addProfileImageButton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/darkGrey"
        android:backgroundTint="@color/grey"
        android:drawablePadding="20dp"
        android:hint="Enter Event Name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="@color/orange"
        android:textColorHint="@color/orange" />

    <EditText
        android:id="@+id/eventCreationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventCreationName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/darkGrey"
        android:backgroundTint="@color/grey"
        android:drawablePadding="20dp"
        android:hint="Enter Event Date"
        android:padding="12dp"
        android:textColor="@color/orange"
        android:textColorHint="@color/orange" />

    <EditText
        android:id="@+id/eventCreationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventCreationDate"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/darkGrey"
        android:backgroundTint="@color/grey"
        android:drawablePadding="20dp"
        android:hint="Enter Event Time"
        android:padding="12dp"
        android:textColor="@color/orange"
        android:textColorHint="@color/orange" />

    <EditText
        android:id="@+id/eventCreationLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventCreationTime"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/darkGrey"
        android:backgroundTint="@color/grey"
        android:drawablePadding="20dp"
        android:hint="Enter Event Location"
        android:padding="12dp"
        android:textColor="@color/orange"
        android:textColorHint="@color/orange" />


    <EditText
        android:id="@+id/eventCreationDescription"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/eventCreationLocation"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/darkGrey"
        android:backgroundTint="@color/grey"
        android:drawablePadding="20dp"
        android:hint="Enter Event Description"
        android:padding="15dp"
        android:textColor="@color/orange"
        android:textColorHint="@color/grey" />

    <Button
        android:id="@+id/eventCreationCancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventCreationDescription"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:text="CANCEL"/>

    <Button
        android:id="@+id/eventCreationSubmit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventCreationDescription"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="240dp"
        android:padding="10dp"
        android:text="SUBMIT" />

    </RelativeLayout>

</ScrollView>